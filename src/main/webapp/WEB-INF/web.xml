<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>Task_Management_System</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>register.jsp</welcome-file>
		<welcome-file>default.htm</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>LoginJsp</servlet-name>
		<jsp-file>/login.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginJsp</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>com.backend.RegisterServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.backend.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/task</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>updateTaskJsp</servlet-name>
		<jsp-file>/updateTask.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>updateTaskJsp</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>deleteTaskJsp</servlet-name>
		<jsp-file>/deleteTask.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>deleteTaskJsp</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>searchTaskJsp</servlet-name>
		<jsp-file>/searchTask.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>searchTaskJsp</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>addTaskJsp</servlet-name>
		<jsp-file>/addTask.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>addTaskJsp</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AddTaskServlet</servlet-name>
		<servlet-class>com.backend.AddTaskServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AddTaskServlet</servlet-name>
		<url-pattern>/addTask</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UpdateTaskServlet</servlet-name>
		<servlet-class>com.backend.UpdateTaskServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>UpdateTaskServlet</servlet-name>
		<url-pattern>/updateTask</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DeleteTaskServlet</servlet-name>
		<servlet-class>com.backend.DeleteTaskServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DeleteTaskServlet</servlet-name>
		<url-pattern>/deleteTask</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>searchTaskServlet</servlet-name>
		<servlet-class>com.backend.SearchTaskServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>searchTaskServlet</servlet-name>
		<url-pattern>/searchTask</url-pattern>
	</servlet-mapping>


</web-app>